/* 购物车删除按钮 */

.delete_btn {
  width: 125rpx;
  height: 246rpx;
  background: red;
  color: #fff;
  line-height: 246rpx;
  text-align: center;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  font-size: 28rpx;
  z-index: 99999;
}
