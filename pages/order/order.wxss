/* pages/order/order.wxss */

page {
  background-color: #f8f8f8;
}

.order_navbar {
  flex: none;
  display: flex;
  height: 92rpx;
  font-size: 28rpx;
  color: #7d7e80;
  background: #fff;
  line-height: 94rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
}

.order_navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  font-size: 28rpx;
}

/* 顶部导航字体颜色 */

.order_navbar .item.active {
  color: #d288c3;
}

/* 顶部指示条属性 */

.order_navbar .item.active:after {
  margin: 0rpx auto;
  content: "";
  display: block;
  width: 84rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #d288c3;
}

.allCommodity {
  width: 95%;
  height: 354rpx;
  background: #fff;
  font-size: 28rpx;
  padding-left: 5%;
  margin-top: 20rpx;
  position: relative;
}

.allCommodity:first-child {
  margin-top: 0rpx;
}

.allCommodity_title {
  width: 100%;
  height: 109rpx;
  border-bottom: 1px solid #efefef;
  line-height: 109rpx;
}

.allCommodity_titleright {
  font-size: 24rpx;
  color: #d288c3;
  float: right;
  margin-right: 30rpx;
}

.allCommodity_content {
  height: 246rpx;
  display: flex;
}

.allCommodity_contentLeft {
  width: 182rpx;
  height: 182rpx;
  margin-top: 20rpx;
}

.allCommodity_contentLeft image {
  width: 100%;
  height: 100%;
}

.allCommodity_contentright {
  width: 460rpx;
  margin-left: 25rpx;
  margin-top: 25rpx;
}

.contentright_title {
  font-size: 28rpx;
}

.contentright_hint {
  font-size: 22rpx;
  color: #666;
  line-height: 53rpx;
}

.contentright_priceTotal {
  color: #d288c3;
  font-size: 24rpx;
}

.contentright_priceNum {
  position: absolute;
  bottom: 46rpx;
  right: 60rpx;
  color: #666;
  font-size: 24rpx;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.nothave {
  width: 180rpx;
  height: 260rpx;
  margin: 0rpx auto;
  margin-top: 170rpx;
  text-align: center;
}

.nothave_img {
  width: 180rpx;
  height: 188rpx;
}

.nothave_img image {
  width: 100%;
  height: 100%;
}

.nothave_text {
  color: #bfbfbf;
  font-size: 28rpx;
}

.Commodity_select {
  width: 56rpx;
  height: 246rpx;
  line-height: 246rpx;
}

.bottom_nav {
  width: 100%;
  height: 112rpx;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  /* display: flex; */
}

.navCheckall {
  font-size: 28rpx;
  margin-left: 30rpx;
  float: left;
  display: flex;
}

.allSelelct {
  margin-top: 35rpx;
}

.navCheckall_text {
  margin-left: 10rpx;
  margin-top: 35rpx;
}

.nav_left {
  float: right;
  display: flex;
}

.navTotalprices {
  font-size: 24rpx;
  color: #666;
  margin-top: 20rpx;
  margin-right: 18rpx;
}

.navsizeClor {
  color: #d288c3;
}

.navHnit {
  font-size: 22rpx;
  text-align: right;
}

.navButton {
  width: 220rpx;
  height: 112rpx;
  border-radius: 0rpx;
  background: #d288c3;
  font-size: 28rpx;
